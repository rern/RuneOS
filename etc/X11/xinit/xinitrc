#!/bin/bash

export XDG_CACHE_HOME="/tmp/.cache"
export DISPLAY=:0

xset dpms 0 0 0
xset s off
xset -dpms

if [[ ! -e /srv/http/data/system/cursor ]] && ifconfig | grep -A1 'eth0\|wlan0' | grep -q inet; then
	cursor=no
else 
	cursor=yes
fi
matchbox-window-manager -use_cursor $cursor &

chromium --app=http://localhost --kiosk --incognito --no-sandbox --force-device-scale-factor=1
